<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="silviu.findtweets"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="findtweets.FindTweetsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="findtweets.Activities.LoginWithTwitterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="findtweets.Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>


        <activity
            android:name="findtweets.Activities.TweetListActivity"
            android:theme="@style/FullscreenTheme"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ef0746e98e7c9f069472ca3058f52e44af562014" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
